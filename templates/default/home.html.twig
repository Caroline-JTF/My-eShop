{% extends "base.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block body %}

    <h1 class="text-center my-5">Bienvenue sur la boutique en ligne</h1>

    <div class="row">
        <div class="col-10 mx-auto">
            {% include "include/_flashes.html.twig" %}
        </div>
    </div>

    <div class="row mx-5 d-f justify-content-center">

        {% for produit in produits %}
            <div class="col-3 m-2">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('uploads/' ~ produit.photo) }}" class="card-img-top d-f" alt="une photo" style="object-fit: contain; width:150px; height: 220px; margin: 10px auto;">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.title }}</h5>
                        <p class="card-text">{{ produit.description | length > 30 ? produit.description | slice(0,30) ~ '...': produit.description }}</p>
                        <a href="{{ path('panier_add', {'id' : produit.id}) }}" class="col-12 btn btn-primary text-center"> <i class="fa-solid fa-cart-plus"></i> </a>
                    </div>
                </div>
            </div>
        {% else %}
            <h3 class="text-center">La boutique est vide</h3>
        {% endfor %}
    </div>

{% endblock %}